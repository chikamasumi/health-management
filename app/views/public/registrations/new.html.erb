<h2>新規会員登録</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <table>
    <thead>
      <th>名前</th>
      <th>
        <%= f.label '(姓)' %>
        <%= f.text_field :last_name, autofocus: true %>
      </th>
      <th>
        <%= f.label '(名)' %>
        <%= f.text_field :first_name, autofocus: true %>
      </th>
    </thead>
    <thead>
      <th>フリガナ</th>
      <th>
        <%= f.label '(セイ)' %>
        <%= f.text_field :last_name_kana, autofocus: true %>
      </th>
      <th>
        <%= f.label '(メイ)' %>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </th>
    </thead>
    <thead>
      <th><%= f.label :メールアドレス %></th>
      <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
    </thead>
    <thead>
      <th><%= f.label :電話番号 %></th>
      <th><%= f.text_field :telephone_number, autofocus: true %></th>
    </thead>
    <thead>
      <th>
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </th>
      <th><%= f.password_field :password, autocomplete: "new-password" %></th>
    </thead>
    <thead>
      <th><%= f.label 'パスワード(確認用)' %></th>
      <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
    </thead>
  </table>
  <div class="actions">
    <%= f.submit "新規登録", class:'btn btn-success' %>
  </div>
<% end %>

<h4>既に登録済みの方</h4>
  <%= link_to 'こちら', new_user_session_path %>からログインしてください。
