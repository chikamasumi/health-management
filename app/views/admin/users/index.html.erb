<h2>社員一覧画面</h2>

<table class="table table-striped">
  <thead>
    <th width="200" heigth="24">氏名</th>
    <th width="200" heigth="24">メールアドレス</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to admin_user_path(user.id), class:'btn' do %>
            <%= user.last_name %><%= user.first_name %>
          <% end %>
        </td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>