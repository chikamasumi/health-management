<h2>社員一覧画面</h2>
<div class="search-form">
  <%= form_with url: admin_user_search_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, value: @keyword %>
    <%= f.submit "検索" %>
  <% end %>
</div>
<table class="table table-striped">
  <thead>
    <th width="200" heigth="24">氏名</th>
    <th width="200" heigth="24">メールアドレス</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to admin_user_path(user.id) do %>
            <%= user.last_name %><%= user.first_name %>
          <% end %>
        </td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>